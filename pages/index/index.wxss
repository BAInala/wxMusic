/* pages/index/index.wxss */
.banners{
    width: 100%;
    height:300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
}
/* 五个图标 */
.navContainer{
    display: flex;
}
.navItem{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 20%;
}
.navItem .iconfont{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
    background: rgb(240,19,19);
    color: #fff;
    font-size: 48rpx;
    margin: 20rpx 0;
}
.text{
    font-size: 26rpx;
}


/* 推荐内容区域 */
.recommendContainer{
    padding: 20rpx;
}
.recommendScroll{
    display: flex;
    margin-top: 20rpx;
    height: 300rpx;
}
.scrollItem{
    width: 200rpx;
    margin-right: 20rpx;
}
.scrollItem image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;

}
.scrollItem text {
    font-size: 26rpx;
    /* 单行文本溢出隐藏 省略号代替 */
    /*display: block;*/
    /*white-space: nowrap;*/
    /*overflow: hidden;*/
    /*text-overflow: ellipsis;*/
  
    /* 多行文本溢出隐藏 省略号代替*/
    display: -webkit-box ;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
  
  
    -webkit-line-clamp: 2;
  }



  /* 排行榜区域 */
  .toplist{
      padding: 20rpx;
  }
  .topListSwiper{
      height:400rpx;
  }
  .swiperItem{
      width:96%;
      background:#fbfbfb
  }
  .musicItem{
      display: flex;
      margin-bottom: 20rpx;
  }
  .musicItem .title{
      font-size: 30rpx;
      line-height:80rpx
  }
  .musicItem image{
      width:100rpx;
      height:100rpx;
      border-radius: 6rpx;
  }
  .musicItem .count{
      width: 100rpx;
      line-height: 100rpx;
      text-align: center;
  }
.musicItem .muscicName{
    height: 100rpx;
    line-height: 100rpx;
